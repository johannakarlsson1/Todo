<p id="notice"><%= notice %></p>

<h1>Todo Items <i class="fa fa-check-square"></i></h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class: "btn btn-warning" %></td>
        <td><%= link_to todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
        <i class="fa fa-times"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_item_path %>
